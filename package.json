{
  "name": "home-back",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "server": "nodemon ./bin/www",
    "client-install":"npm install --prefix client",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "node ./bin/www ",
    "heroku-postbuild":"cd client && npm install --only=dev && npm install && npm run build"

  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "moment": "^2.29.4",
    "mongoose": "^5.9.6",
    "morgan": "~1.9.1",
    "mosca": "^2.8.3",
    "mqtt": "^3.0.0"
  },
  "devDependencies": {
    "concurrently": "^5.1.0"
  }
}
